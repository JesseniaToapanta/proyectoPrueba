    <menuitem name="List" id="prueba.menu_1_list" parent="prueba.menu_1"
              action="prueba.action_window"/>
    <menuitem name="Server to list" id="prueba" parent="prueba.menu_2"
              action="prueba.action_server"/>
    -->

</odoo>
